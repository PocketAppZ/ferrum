{
  "name": "ferrum",
  "productName": "Ferrum",
  "author": "kasper.space",
  "description": "Music library app",
  "version": "0.13.1",
  "repository": "https://github.com/probablykasper/ferrum",
  "scripts": {
    "dev": "npm run napi:dev && vite",
    "dev-release": "npm run napi && vite",
    "napi": "napi build ./build --dts addon.d.ts --release",
    "napi:dev": "napi build ./build --dts addon.d.ts",
    "build": "npm run napi && npm run build:web && electron-builder",
    "build:web": "vite build",
    "electron-builder": "electron-builder",
    "lint": "prettier --check --plugin-search-dir=. src && eslint src && svelte-check",
    "format": "prettier --write --plugin-search-dir=. src && eslint --fix src",
    "check": "npm run lint && cargo check"
  },
  "build": {
    "appId": "space.kasper.ferrum",
    "productName": "Ferrum",
    "artifactName": "${productName}-v${version}-${os}.${ext}",
    "mac": {
      "category": "public.app-category.music",
      "icon": "assets/icon.icns",
      "target": [
        "dmg"
      ],
      "darkModeSupport": true,
      "identity": null,
      "electronLanguages": null
    },
    "linux": {
      "category": "Audio",
      "icon": "assets/icon.icns",
      "maintainer": "kasper.space <example@example.com>",
      "target": [
        "deb",
        "rpm"
      ]
    },
    "win": {
      "icon": "assets/icon.ico",
      "target": [
        "nsis"
      ]
    },
    "files": [
      "build/web",
      "build/electron",
      "build/addon.node"
    ],
    "directories": {
      "buildResources": "build_resources",
      "output": "build/app"
    }
  },
  "main": "build/electron/main.js",
  "napi": {
    "name": "addon"
  },
  "devDependencies": {
    "@napi-rs/cli": "^2.11.4",
    "@sveltejs/vite-plugin-svelte": "^1.0.3",
    "@types/wicg-mediasession": "^1.1.3",
    "@typescript-eslint/eslint-plugin": "^5.36.1",
    "@typescript-eslint/parser": "^5.36.1",
    "concurrently": "^7.3.0",
    "electron": "^14.2.9",
    "electron-builder": "^23.3.3",
    "eslint": "^8.23.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-svelte3": "^4.0.0",
    "music-metadata": "^7.12.5",
    "prettier": "^2.7.1",
    "prettier-plugin-svelte": "^2.7.0",
    "sass": "^1.54.6",
    "svelte": "^3.49.0",
    "svelte-check": "^2.9.0",
    "svelte-preprocess": "^4.10.7",
    "typescript": "^4.8.2",
    "vite": "^3.0.9",
    "vite-plugin-electron-x": "^1.1.0"
  },
  "dependencies": {
    "simple-plist": "^1.3.1"
  },
  "prettier": {
    "printWidth": 100,
    "semi": false,
    "singleQuote": true
  }
}

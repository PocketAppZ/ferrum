{
  "name": "ferrum",
  "productName": "Ferrum",
  "author": "kasper.space",
  "description": "Music library app",
  "version": "0.16.2",
  "repository": "https://github.com/probablykasper/ferrum",
  "scripts": {
    "dev": "npm run napi:dev && vite",
    "dev-release": "npm run napi && vite",
    "napi": "napi build ferrum-addon --dts addon.d.ts --release",
    "napi:dev": "napi build ferrum-addon --dts addon.d.ts",
    "build": "npm run napi && npm run build:web && electron-builder",
    "build:web": "vite build",
    "electron-builder": "electron-builder",
    "lint": "prettier --check --plugin-search-dir=. src && svelte-check --compiler-warnings a11y-click-events-have-key-events:ignore,a11y-no-noninteractive-tabindex:ignore && eslint src",
    "format": "prettier --write --plugin-search-dir=. src && eslint --fix src",
    "check": "npm run lint && cargo check"
  },
  "build": {
    "appId": "space.kasper.ferrum",
    "productName": "Ferrum",
    "artifactName": "${productName}-v${version}-${os}.${ext}",
    "mac": {
      "category": "public.app-category.music",
      "icon": "assets/icon.icns",
      "target": [
        "dmg"
      ],
      "darkModeSupport": true,
      "identity": null,
      "electronLanguages": null
    },
    "linux": {
      "category": "Audio",
      "icon": "assets/icon.icns",
      "maintainer": "kasper.space <example@example.com>",
      "target": [
        "deb",
        "rpm"
      ]
    },
    "win": {
      "icon": "assets/icon.ico",
      "target": [
        "nsis"
      ]
    },
    "files": [
      "build/web",
      "build/electron",
      "ferrum-addon/addon.node"
    ],
    "directories": {
      "buildResources": "build_resources",
      "output": "build/app"
    }
  },
  "main": "build/electron/main.js",
  "napi": {
    "name": "addon"
  },
  "devDependencies": {
    "@napi-rs/cli": "^2.12.0",
    "@sveltejs/vite-plugin-svelte": "^1.1.0",
    "@types/wicg-mediasession": "^1.1.4",
    "@typescript-eslint/eslint-plugin": "^5.42.0",
    "@typescript-eslint/parser": "^5.42.0",
    "concurrently": "^7.5.0",
    "electron": "^14.2.9",
    "electron-builder": "^23.6.0",
    "eslint": "^8.27.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-svelte3": "^4.0.0",
    "prettier": "^2.7.1",
    "prettier-plugin-svelte": "^2.8.0",
    "sass": "^1.56.0",
    "svelte": "^3.52.0",
    "svelte-check": "^2.9.2",
    "svelte-preprocess": "^4.10.7",
    "typescript": "^4.8.4",
    "vite": "^3.2.2",
    "vite-plugin-electron-x": "^1.1.0",
    "vite-plugin-externals": "^0.5.1"
  },
  "workspaces": [
    "ferrum-addon"
  ],
  "prettier": {
    "printWidth": 100,
    "semi": false,
    "singleQuote": true
  }
}
